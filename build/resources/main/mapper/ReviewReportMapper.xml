<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 수정 완료 -->
<mapper namespace="ssd.springcooler.gachiwatch.dao.mybatis.mapper.ReviewReportMapper">

    <!-- 신고 생성 -->
    <insert id="createReport" parameterType="ssd.springcooler.gachiwatch.domain.ReviewReport">
        INSERT INTO review_report (
        report_id,
        review_id,
        member_id,
        substance,
        review_report_date
        ) VALUES (
        #{reportId},
        #{reviewId},
        #{memberId},
        #{substance},
        #{date}
        )
    </insert>

    <!-- 신고 수정 -->
    <update id="updateReport" parameterType="ssd.springcooler.gachiwatch.domain.ReviewReport">
        UPDATE review_report
        SET
        substance = #{substance},
        review_report_date = #{date}
        WHERE report_id = #{reportId}
    </update>

    <!-- 신고 삭제 -->
    <delete id="deleteReport">
        DELETE FROM review_report
        WHERE report_id = #{reportId}
    </delete>

    <!-- 신고 ID로 조회 -->
    <select id="getReportById" resultType="ssd.springcooler.gachiwatch.domain.ReviewReport">
        SELECT *
        FROM review_report
        WHERE report_id = #{reportId}
    </select>

    <!-- 유저 ID로 신고 리스트 조회 -->
    <select id="getReportsByUserId" resultType="ssd.springcooler.gachiwatch.domain.ReviewReport">
        SELECT *
        FROM review_report
        WHERE member_id = #{memberId}
    </select>

</mapper>
