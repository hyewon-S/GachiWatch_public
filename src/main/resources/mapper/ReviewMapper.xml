<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 일단 완성 단, sql문 테스트 못해봄-->
<mapper namespace="ssd.springcooler.gachiwatch.dao.mybatis.mapper.ReviewMapper">

    <!-- 리뷰 삽입 -->
    <insert id="insertReview" parameterType="ssd.springcooler.gachiwatch.domain.Review">
        INSERT INTO review (
        content_id,
        member_id,
        substance,
        review_date,
        score,
        likes
        ) VALUES (
        #{contentId},
        #{member.memberId},
        #{substance},
        TO_DATE(#{date}, 'YYYY-MM-DD:HH24:MI'),
        #{score},
        0
        )
    </insert>

    <!-- 리뷰 수정 -->
    <update id="updateReview" parameterType="ssd.springcooler.gachiwatch.domain.Review">
        UPDATE review
        SET
        review_date = TO_DATE(#{date}, 'YYYY-MM-DD:HH24:MI'),
        substance = #{substance},
        score = #{rate}
        WHERE review_id = #{reviewId}
    </update>

    <!-- 리뷰 삭제 -->
    <delete id="deleteReview">
        DELETE FROM review
        WHERE review_id = #{reviewId}
    </delete>

    <!-- ID로 리뷰 조회 -->
    <select id="getReviewById" resultType="ssd.springcooler.gachiwatch.domain.Review">
        SELECT *
        FROM review
        WHERE review_id = #{reviewId}
    </select>

    <!-- 콘텐츠 ID로 리뷰 리스트 조회 -->
    <select id="getReviewsByContentId" resultMap="ReviewResultMap">
        SELECT *
        FROM review
        WHERE content_id = #{contentId}
    </select>

    <!-- 유저 ID로 리뷰 리스트 조회 -->
    <select id="getReviewsByUserId" resultMap="ReviewResultMap">
        SELECT *
        FROM review
        WHERE member_id = #{memberId}
    </select>

    <select id="getReviewsByContentIdAndMemberId" resultMap="ReviewResultMap">
        SELECT *
        FROM review
        WHERE member_id = #{memberId} AND content_id = #{contentId}
    </select>

    <resultMap id="ReviewResultMap" type="ssd.springcooler.gachiwatch.domain.Review">
        <id property="reviewId" column="review_id" />
        <result property="contentId" column="content_id" />
        <result property="substance" column="substance" />
        <result property="score" column="score" />
        <result property="date" column="review_date" />
        <result property="likes" column="likes" />
        <association property="member" javaType="ssd.springcooler.gachiwatch.domain.Member">
            <id property="memberId" column="member_id" />
        </association>
    </resultMap>

</mapper>
