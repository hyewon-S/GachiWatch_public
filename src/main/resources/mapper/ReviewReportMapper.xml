<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 일단 작성만 해둔 상태.. 미완성 -->
<mapper namespace="ssd.springcooler.gachiwatch.dao.mybatis.mapper.ReviewReportMapper">

    <!-- 신고 생성 -->
    <insert id="createReport" parameterType="ReviewReport">
        INSERT INTO review_report (
        report_id,
        review_id,
        member_id,
        content_id,
        reason,
        report_date
        ) VALUES (
        #{reportId},
        #{reviewId},
        #{memberId},
        #{contentId},
        #{reason},
        #{reportDate}
        )
    </insert>

    <!-- 신고 수정 -->
    <update id="updateReport" parameterType="ReviewReport">
        UPDATE review_report
        SET
        reason = #{reason},
        report_date = #{reportDate}
        WHERE report_id = #{reportId}
    </update>

    <!-- 신고 삭제 -->
    <delete id="deleteReport">
        DELETE FROM review_report
        WHERE report_id = #{reportId}
    </delete>

    <!-- 신고 ID로 조회 -->
    <select id="getReportById" resultType="ReviewReport">
        SELECT *
        FROM review_report
        WHERE report_id = #{reportId}
    </select>

    <!-- 콘텐츠 ID로 신고 리스트 조회 -->
    <select id="getReportsByContentId" resultType="ReviewReport">
        SELECT *
        FROM review_report
        WHERE content_id = #{contentId}
    </select>

    <!-- 유저 ID로 신고 리스트 조회 -->
    <select id="getReportsByUserId" resultType="ReviewReport">
        SELECT *
        FROM review_report
        WHERE member_id = #{userId}
    </select>

</mapper>
